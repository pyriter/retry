{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleDetection": "force",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
